{
  "name": "character-tuning-crm",
  "version": "1.0.0",
  "description": "CRM/ERP для детейлинга, тюнинга и автохимии",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build",
    "test": "jest",
    "test:cov": "jest --coverage --runInBand",
    "test:contracts": "npm run precontracts && jest tests/api.contracts.*.test.js --runInBand --coverage=false",
    "seed:orderTypes": "node scripts/seedOrderTypes.js",
    "setup:db": "bash scripts/setup-dev-db.sh",
    "bootstrap": "bash scripts/bootstrap-demo.sh",
    "server:bg": "node server.js > /tmp/trae-server.log 2>&1 & echo $! > /tmp/trae.pid",
    "server:stop": "kill $(cat /tmp/trae.pid) || true",
    "extract:auth": "node scripts/extractAuthSpec.js",
    "extract:fields": "node scripts/extractFieldsSpec.js",
    "extract:ordertype": "node scripts/extractOrderTypeSpec.js",
    "extract:payments": "node scripts/extractPaymentsSpec.js",
    "extract:items": "node scripts/extractItemsSpec.js",
    "extract:shop": "node scripts/extractShopSalesSpec.js",
    "extract:payroll": "node scripts/extractPayrollSpec.js",
    "precontracts": "node scripts/generateSwagger.js && npm run extract:auth && npm run extract:fields && npm run extract:ordertype && npm run extract:payments && npm run extract:items && npm run extract:shop && npm run extract:payroll"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.61.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
