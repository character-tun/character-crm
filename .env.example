# Server
PORT=5002
MONGO_URI=mongodb://localhost:27017/character-crm
JWT_SECRET=replace-me-with-a-strong-secret

# Auth DEV mode (1 = in-memory users/roles, 0 = MongoDB)
AUTH_DEV_MODE=1

# In-memory cache TTL (seconds)
CACHE_TTL_SECS=60

# Payments feature flags
PAYMENTS_REFUND_ENABLED=1
DEFAULT_CASH_REGISTER=
CASH_LOCK_STRICT=0

# Stocks feature flag
ENABLE_STOCKS=1